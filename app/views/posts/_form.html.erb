<%= form_for @post do |f| %>
	<% if @post.errors.any? %>
		<div class="error">
			<h2><%= pluralize(@post.errors.count,"error") %> prevented this post from saving</h2>
				<ul>
					<% @post.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
					<% end %>
				</ul>
		</div>
	<% end %> 

	<p>
		Title:<br>
		<%= f.text_field :title %>
	</p>

	<p>
		Body:<br>
		<%= f.text_area :body %>
	</p>

	<p>
		<%= f.submit %>
	</p>

<% end %>