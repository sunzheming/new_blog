<% @posts.each do |post| %>
	<div id="main-post">
		<div class="post">
			<div class="post-header">
				<div class="title">
					<%= link_to post.title, post %>
					<div class="post-info">
					<%= post.created_at.strftime("%Y-%m-%d %H:%M") %>
					</div>
				</div>

				
			</div>
			<div class="body">
				<%= post.body.truncate(300).html_safe%>
			</div>
			<div class="btn-group" role="group" >
  			<button type="button" class="btn btn-default"><%= link_to 'Read more', post %></button>
  		</div>
		</div>
	</div>
<% end %>


